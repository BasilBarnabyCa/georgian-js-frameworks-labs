  <body class="flex flex-col min-h-screen">
    <div id="main" class="flex-grow relative">
      <div class="w-full z-50 top-0 py-3 fixed flex justify-center bg-gradient">
        <div class="container flex items-center justify-between">
          <div>
            <a href="/">
              <img src="/img/logo.png" class="w-12" alt="logo" />
            </a>
          </div>
          <ul class="flex items-center">
            <li class="group pl-6">
              <a
                href="/"
                class="cursor-pointer pt-0.5 font-header font-semibold uppercase text-white"
